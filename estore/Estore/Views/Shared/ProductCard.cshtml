@model Estore.DAL.Models.ProductCardModel

<div class="col-lg-2 col-sm-3 col-6">
    <div class="card book-card">
        <a href="/product/@Model.UniqueId"><img class="card-img-top" src="@Model.ProductImage" alt="@Model.ProductName"></a>
        <div class="card-body">
            <a href="/product/@Model.UniqueId"><div class="card-title">@Model.ProductName</div></a>
            <div class="current-price">@Model.Price руб.</div>
        </div>
    </div>
</div>